#include <stdio.h>
struct emp{
    char name[50];
    int id;
    int salary;
};
int main()
{
    int i,n,k;
    printf("enter the number of employee");
    scanf("%d",&n);
    struct emp e[n];
    printf("to read details");
    for(i=0;i<n;i++)
    {
        printf("enter the employee name\n");
        scanf("%s",e[i].name);
        printf("enter the employee id\n");
        scanf("%d",&e[i].id);
        printf("enter the employee salary\n");
        scanf("%d",&e[i].salary);
    }
    printf("enter the id to be searched");
    scanf("%d",&k);
    for(i=0;i<n;i++)
    {
        while(e[i].id==k)
        {
            printf("%s",e[i].name);
            printf("%d",e[i].id);
            printf("%d",e[i].salary);
            break;
        }
    
    }
    return 0;
}
