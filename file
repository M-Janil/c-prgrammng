#include<stdio.h>
int main()
{
    FILE *fp;
    int p,n,t;
    do{
    printf("menu 2.insert 1.read to array 3.delete 4.write 5. exit");
    scanf("%d",&t);
    switch(t)
    {
        case 1:
        {
            int arr[20];
            fp=fopen("data.txt","r");
            if(fp==NULL)
            {return 1;}
            n=0;
            while(fscanf(fp,"%d",&arr[n])!=EOF)
            {
                n++;
            }
            fclose(fp);
            break;
        }
        case 2:
        {
            int i;
            fp=fopen("data.txt","a");
            printf("hoe many numbers to insert?");
            scanf("%d",&p);
            int arr[p];
            for(i=0;i<p;i++)
            {
                printf("enter the %dth number to be insertes",i);
                scanf("%d",&arr[i]);
                fprintf(fp,"%d",arr[i]);
            }
            fclose(fp);
            break;
        }
        case 4:
        {
            int i;
            fp=fopen("data.txt","w");
            printf("enter the number of digits ro be written");
            scanf("%d",&p);
            int arr[p];
            for(i=0;i<p;i++)
            {
                printf("gigit");
                scanf("%d",&arr[i]);
                fprintf(fp,"%d",arr[i]);
            }
            fclose(fp);
            break;
    }
        case 5:
        printf("exiting");
        break;
        case 3:
        {
            fp=fopen("data.txt","r");
            int arr[20],p,i;
            n=0;
            while(fscanf(fp,"%d",&arr[n])!=EOF)
            {
                n++;
            }
            fclose(fp);
            for(i=0;i<n;i++)
            {
                printf("%d",arr[i]);
            }
            printf("enter the pos to dlete");
            scanf("%d",&p);
            p=p-1;
            for(i=p;i<n;i++)
            {
                arr[i]=arr[i+1];
            }
            n--;
        }
        break;
    }
}while(t!=5);
return 0;
}
